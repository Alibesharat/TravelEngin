@model Itinerary

@{
    ViewBag.Title = "Add Itinerary for " + ViewBag.TravelPackageName;
}

<h2>@ViewBag.Title</h2>

<form asp-action="AddItinerary">
    <input type="hidden" asp-for="TravelPackageId" />
    <div class="form-group">
        <label asp-for="DayNumber" class="control-label"></label>
        <input asp-for="DayNumber" class="form-control" />
        <span asp-validation-for="DayNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Activities" class="control-label"></label>
        <input asp-for="Activities" class="form-control" />
        <span asp-validation-for="Activities" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Accommodation" class="control-label"></label>
        <input asp-for="Accommodation" class="form-control" />
        <span asp-validation-for="Accommodation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Meals" class="control-label"></label>
        <input asp-for="Meals" class="form-control" />
        <span asp-validation-for="Meals" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Itinerary</button>
</form>

